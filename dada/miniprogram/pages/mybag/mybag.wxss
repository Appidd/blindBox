.block {
    width: 100%;
    height: auto;
    border-top: 1px solid #efefef;
}

.titleBox {
    width: 100%;
    padding: 30rpx;
    overflow: hidden;
    background-color: #fff;
}

.iconBox {
    float: left;
    background-color: #fff;
    border-radius: 5rpx;
    overflow: hidden;
}

.icon,.iconBox {
    width: 40rpx;
    height: 40rpx;
}

.title {
    float: left;
    color: #df4a44;
    line-height: 40rpx;
    font-size: 24rpx;
    width: 270rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.ar {
    float: right;
    width: 40rpx;
    height: 40rpx;
}

.ar.act {
    transform: rotate(90deg);
}

.num {
    float: right;
    color: #858585;
    line-height: 40rpx;
    font-size: 24rpx;
    padding-right: 10rpx;
}

.num text {
    color: #f76102;
    font-size: 26rpx;
}

.orange {
    color: #f76102;
}

.goodList,.goodListBox {
    width: 100%;
    height: auto;
}

.goodList {
    display: flex;
    flex-wrap: wrap;
    padding-left: 30rpx;
    background-color: #fff;
}

.goodInfo {
    width: 140rpx;
    height: auto;
    margin: 0 40rpx 30rpx 0;
    position: relative;
}

.goodInfo:nth-child(4n) {
    margin-right: 0;
}

.goodImg {
    width: 140rpx;
    height: 140rpx;
}

.goodWord {
    font-size: 20rpx;
    color: #df4a44;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goodTimeWord {
    font-size: 18rpx;
    color: #ff5123;
    line-height: 25rpx;
}

.iconBox2 {
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    background-color: #fff;
    border-radius: 50%;
    overflow: hidden;
}

.icon2,.iconBox2 {
    width: 40rpx;
    height: 40rpx;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 140rpx;
    height: 140rpx;
    background-color: rgba(0,0,0,.6);
    z-index: 9;
}

.choseAllBtn {
    position: fixed;
    right: 40rpx;
    z-index: 99999;
    bottom: 200rpx;
    color: #fff;
    border-radius: 50%;
    font-size: 20rpx;
    width: 68rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    letter-spacing: 3rpx;
    background-color: #ff5d50;
}

.AuthMask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999999999999;
}