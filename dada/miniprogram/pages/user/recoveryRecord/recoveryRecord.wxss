.blankBlock {
    width: 100%;
    height: 50rpx;
}

.orderItem {
    width: 680rpx;
    height: auto;
    border-bottom: 1px solid #cf4f34;
    margin: 0 auto 60rpx;
}

.infoBox {
    overflow: hidden;
}

.infoBox,.row {
    width: 100%;
}

.creatTime {
    float: left;
    width: 70%;
    color: #cf4f34;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.creatTime,.num {
    font-size: 28rpx;
    line-height: 40rpx;
}

.num {
    float: right;
    color: #333;
    padding-left: 30rpx;
}

.goodsBox {
    width: 100%;
    height: 195rpx;
    margin-top: 20rpx;
}

.scrollBox {
    width: 100%;
    height: 100%;
}

.goodItem {
    float: left;
    width: 160rpx;
    height: 190rpx;
    margin-right: 20rpx;
}

.goodItem:last-child {
    margin-right: 0;
}

.goodImg {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
}

.word {
    font-size: 20rpx;
    color: #333;
    padding-top: 8rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.priceBox {
    position: relative;
    font-size: 24rpx;
    color: #333;
    text-align: right;
    padding: 20rpx 0;
}

.priceBox text {
    font-weight: 700;
    font-size: 36rpx;
    color: #f76102;
}

.priceIcon {
    position: relative;
    top: 5rpx;
    left: -8rpx;
    width: 35rpx;
    height: 35rpx;
}