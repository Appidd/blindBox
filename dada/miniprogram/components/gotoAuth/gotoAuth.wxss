.box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #efefef;
    z-index: 99999;
}

.btn {
    top: 45%;
    left: 50%;
    width: 200rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #742dd1;
    border-radius: 10rpx;
    transform: translate(-50%,-50%);
    letter-spacing: 3px;
}

.btn,.tips {
    position: absolute;
    color: #fff;
    text-align: center;
}

.tips {
    top: 35%;
    transform: translate(0,-50%);
    width: 100%;
    font-size: 45rpx;
    font-family: jtzFont;
}