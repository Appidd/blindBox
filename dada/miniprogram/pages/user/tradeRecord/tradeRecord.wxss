.filterBox {
    padding: 28rpx;
    width: 100%;
    height: 110rpx;
    display: flex;
    align-content: flex-end;
    position: relative;
    background-color: #efefef;
    margin-bottom: 40rpx;
}

.scrollsBox {
    position: absolute;
    top: 110rpx;
    left: 0;
    bottom: 0;
    right: 0;
    padding-top: 20rpx;
}

.filterItem {
    width: auto;
    height: 40rpx;
    font-size: 26rpx;
    color: #848eb2;
    line-height: 40rpx;
    margin-right: 28rpx;
    cursor: pointer;
    font-weight: 700;
    font-family: jtzFont;
    position: relative;
}

.filterItem.act {
    color: #a7d402;
    font-size: 32rpx;
}

.filterItem.act:after {
    content: "";
    position: absolute;
    bottom: -30rpx;
    left: 50%;
    transform: translate(-50%,0);
    border: 12rpx solid transparent;
    border-top-color: #a7d402;
}

.orderItem {
    width: 680rpx;
    height: auto;
    border-bottom: 1px solid hsla(0,0%,100%,.2);
    margin: 0 auto 60rpx;
}

.infoBox {
    width: 100%;
    overflow: hidden;
}

.headImg {
    float: left;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.row {
    float: right;
    width: 87%;
}

.name {
    float: left;
    width: 50%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.name,.num {
    font-size: 28rpx;
    color: #fff;
    line-height: 40rpx;
}

.num {
    float: right;
    padding-left: 30rpx;
}

.creatTime {
    font-size: 24rpx;
    color: #848eb2;
    line-height: 34rpx;
}

.goodsBox {
    width: 100%;
    height: 195rpx;
    margin-top: 20rpx;
}

.scrollBox {
    width: 100%;
    height: 100%;
}

.goodItem {
    float: left;
    width: 160rpx;
    height: 190rpx;
    margin-right: 20rpx;
}

.goodItem:last-child {
    margin-right: 0;
}

.goodImg {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
}

.word {
    font-size: 20rpx;
    color: #fff;
    padding-top: 8rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.priceBox {
    position: relative;
    font-size: 24rpx;
    color: #fff;
    text-align: right;
    padding: 20rpx 0;
}

.priceBox text {
    font-weight: 700;
    font-size: 36rpx;
    color: #f76102;
}