.filterBox {
    padding: 28rpx;
    width: 100%;
    height: 110rpx;
    display: flex;
    align-content: flex-end;
    position: relative;
    margin-bottom: 40rpx;
}

.scrollsBox {
    position: absolute;
    top: 110rpx;
    left: 0;
    bottom: 0;
    right: 0;
    padding-top: 50rpx;
}

.filterItem {
    flex-shrink: 0;
    /* padding: 10rpx 15rpx; */
    /* width: 100rpx; */
    height: 50rpx;
    font-size: 30rpx;
    color: #cf4f34;
    line-height: 50rpx;
    margin-right: 28rpx;
    cursor: pointer;
    font-weight: 700;
    /* font-family: jtzFont; */
    position: relative;
    margin-left: 10rpx;
}

.filterItem.act {
    padding: 0rpx 20rpx;
    border-radius: 25rpx;
    /* width: 60rpx; */
    color: white;
    font-size: 30rpx;
    background-color: #cf4f34;
}

.filterItem.act:after {
    content: "";
    position: absolute;
    bottom: -29rpx;
    left: 50%;
    transform: translate(-50%,0);
    border: 15rpx solid transparent;
    border-top-color: #cf4f34;
}


.applyItem {
    width: 690rpx;
    height: auto;
    margin: 0 auto 50rpx;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
}

.goodsBox {
    width: 100%;
    height: 200rpx;
    margin-top: 20rpx;
}

.scrollBox {
    width: 100%;
    height: 100%;
}

.goodItem {
    float: left;
    width: 160rpx;
    height: 190rpx;
    margin-right: 20rpx;
}

.goodItem:last-child {
    margin-right: 0;
}

.goodImg {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
    border: 1px solid hsla(0,0%,100%,.2);
}

.word {
    font-size: 20rpx;
    color: #8c8c8c;
    padding-top: 8rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.expressBox {
    width: 100%;
    border-bottom: 1px solid #cf4f34;
    margin-bottom: 20rpx;
    position: relative;
}

.expressCompany,.infoTitle {
    font-size: 24rpx;
    color: #202020;
    padding-bottom: 20rpx;
    font-weight: 700;
}

.expressNo {
    font-size: 36rpx;
    color: #202020;
    padding-bottom: 30rpx;
}

.copyBtn {
    position: absolute;
    right: 0;
    bottom: 34rpx;
    font-size: 24rpx;
    color: #0491ff;
}

.goodsNum {
    font-size: 24rpx;
    color: #202020;
    font-weight: 700;
}

.infoTitle {
    padding-top: 30rpx;
    padding-bottom: 10rpx;
}

.infoWord {
    font-size: 24rpx;
    color: #8c8c8c;
    line-height: 1.2;
}