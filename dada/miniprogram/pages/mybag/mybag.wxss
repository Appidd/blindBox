.filterBox {
    width: 700rpx;
    display: flex;
    align-content: flex-end;
    position: relative;
}

.filterItem {
    flex-shrink: 0;
    /* padding: 10rpx 15rpx; */
    /* width: 100rpx; */
    height: 50rpx;
    font-size: 30rpx;
    color: #df4a44;
    line-height: 50rpx;
    margin-right: 28rpx;
    cursor: pointer;
    font-weight: 700;
    /* font-family: jtzFont; */
    position: relative;
    margin-left: 10rpx;
}


.filterItem.act {
    padding: 0rpx 20rpx;
    border-radius: 25rpx;
    /* width: 60rpx; */
    color: white;
    font-size: 30rpx;
    background-color: #cf4f34;
    
}

.filterItem.act:after {
    content: "";
    position: absolute;
    bottom: -29rpx;
    left: 50%;
    transform: translate(-50%,0);
    border: 15rpx solid transparent;
    border-top-color: #cf4f34;
}

